@page
@using DataTransfer
@model WebApplication.Pages.Metrics.HTTP_RequestsModel
@{
    ViewData["Title"] = "HTTP_Requests";
}

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
</head>

<div class="main">
    <font size="50">HTTP Requests</font>

    <p>Total Http Requests: @Model.totalHttpRequest</p>

    <p>Log of Http Requests</p>
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>Http Type</th>
                <th>Method</th>
                <th>Path</th>
                <th>GUID</th>
                <th>Timestamp</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.http != null)
            {
                @for (int i = Model.http.Count - 1; i >= 0; i--)
                {
                    Http_Request h = Model.http.ElementAt<Http_Request>(i);
                    <tr>
                        <td>@h.type</td>
                        <td>@h.method</td>
                        <td>@h.path</td>
                        <td>@h.id</td>
                        <td>@h.timestamp</td>
                    </tr>

                }
            }
            else
            {
                <tr>Unable to retrieve data</tr>
            }
        </tbody>
    </table>
</div>