@page
@using DataTransfer
@model WebApplication.Pages.Metrics.ContentionsModel
@{
    ViewData["Title"] = "Contentions";
}

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
</head>

<div class="main">
    <font size="50">Contentions</font>

    <p>Total Http Requests: @Model.totalContentions</p>

    <p>Log of HTTP Requests</p>
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>Contention Type</th>
                <th>Timestamp</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.contentions != null)
            {
                @for (int i = Model.contentions.Count - 1; i >= 0; i--)
                {
                    Contention c = Model.contentions.ElementAt<Contention>(i);
                    <tr>
                        <td>@c.type</td>
                        <td>@c.timestamp</td>
                    </tr>

                }
            }
            else
            {
                <tr>Unable to retrieve data</tr>
            }
        </tbody>
    </table>
</div>